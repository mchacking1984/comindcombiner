{{!< default}}

<div class="container">
    <header class="page-header">
        <h1 class="page-title">{{@site.title}}</h1>
        {{#if @site.description}}
            <p class="page-description">{{@site.description}}</p>
        {{/if}}
    </header>

    <div class="post-feed">
        {{#foreach posts}}
            {{> post-card}}
        {{/foreach}}
    </div>

    {{pagination}}
</div>
